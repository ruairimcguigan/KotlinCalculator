<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="aquidigital.kotlin.calculator.com.MainActivity">

    <EditText
        android:id="@+id/main_activity_result_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="numberSigned|numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/main_activity_button_decimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:minWidth="48dp"
        android:text="."
        app:layout_constraintBaseline_toBaselineOf="@+id/main_activity_button_zero"
        app:layout_constraintStart_toEndOf="@+id/main_activity_button_zero" />

    <Button
        android:id="@+id/main_activity_button_zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:minWidth="48dp"
        android:text="0"
        app:layout_constraintStart_toStartOf="@+id/main_activity_button_one"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_button_one" />

    <Button
        android:id="@+id/main_activity_button_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:minWidth="48dp"
        android:text="1"
        app:layout_constraintStart_toStartOf="@+id/main_activity_button_four"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_button_four" />

    <Button
        android:id="@+id/main_activity_button_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:minWidth="48dp"
        android:text="2"
        app:layout_constraintBaseline_toBaselineOf="@+id/main_activity_button_one"
        app:layout_constraintStart_toEndOf="@+id/main_activity_button_one" />

    <Button
        android:id="@+id/main_activity_button_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:minWidth="48dp"
        android:text="3"
        app:layout_constraintBaseline_toBaselineOf="@+id/main_activity_button_two"
        app:layout_constraintStart_toEndOf="@+id/main_activity_button_two" />

    <Button
        android:id="@+id/main_activity_button_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="48dp"
        android:text="4"
        app:layout_constraintStart_toStartOf="@+id/main_activity_button_seven"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_button_seven" />

    <Button
        android:id="@+id/main_activity_button_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:minWidth="48dp"
        android:text="5"
        app:layout_constraintBaseline_toBaselineOf="@+id/main_activity_button_four"
        app:layout_constraintStart_toEndOf="@+id/main_activity_button_four" />

    <Button
        android:id="@+id/main_activity_button_six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:minWidth="48dp"
        android:text="6"
        app:layout_constraintBaseline_toBaselineOf="@+id/main_activity_button_five"
        app:layout_constraintStart_toEndOf="@+id/main_activity_button_five" />

    <Button
        android:id="@+id/main_activity_button_seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:minWidth="48dp"
        android:text="7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_new_number_view" />

    <Button
        android:id="@+id/main_activity_button_eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:minWidth="48dp"
        android:text="8"
        app:layout_constraintBaseline_toBaselineOf="@+id/main_activity_button_seven"
        app:layout_constraintStart_toEndOf="@+id/main_activity_button_seven" />

    <Button
        android:id="@+id/main_activity_button_nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:minWidth="48dp"
        android:text="9"
        app:layout_constraintBaseline_toBaselineOf="@+id/main_activity_button_eight"
        app:layout_constraintStart_toEndOf="@+id/main_activity_button_eight" />

    <Button
        android:id="@+id/main_activity_button_divide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:minWidth="48dp"
        android:text="/"
        app:layout_constraintBaseline_toBaselineOf="@+id/main_activity_button_nine"
        app:layout_constraintStart_toEndOf="@+id/main_activity_button_nine" />

    <Button
        android:id="@+id/main_activity_button_multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:minWidth="48dp"
        android:text="*"
        app:layout_constraintBaseline_toBaselineOf="@+id/main_activity_button_six"
        app:layout_constraintStart_toEndOf="@+id/main_activity_button_six" />

    <Button
        android:id="@+id/main_activity_button_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:minWidth="48dp"
        android:text="-"
        app:layout_constraintBaseline_toBaselineOf="@+id/main_activity_button_three"
        app:layout_constraintStart_toEndOf="@+id/main_activity_button_three" />

    <Button
        android:id="@+id/main_activity_button_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:minWidth="48dp"
        android:text="+"
        app:layout_constraintBaseline_toBaselineOf="@+id/main_activity_button_equals"
        app:layout_constraintStart_toEndOf="@+id/main_activity_button_equals" />

    <Button
        android:id="@+id/main_activity_button_equals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:minWidth="48dp"
        android:text="="
        app:layout_constraintBaseline_toBaselineOf="@+id/main_activity_button_decimal"
        app:layout_constraintStart_toEndOf="@+id/main_activity_button_decimal" />

    <Button
        android:id="@+id/main_activity_button_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="48dp"
        android:text="Clear"
        tools:layout_editor_absoluteX="290dp"
        tools:layout_editor_absoluteY="447dp" />

    <TextView
        android:id="@+id/main_activity_operation_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/main_activity_new_number_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/main_activity_new_number_view" />

    <EditText
        android:id="@+id/main_activity_new_number_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="numberSigned|numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_result_view" />

</android.support.constraint.ConstraintLayout>
